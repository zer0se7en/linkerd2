#!/usr/bin/env bash

set -eu

if [ $# -eq 1 ]; then
    tag=${1:-}
else
    echo "usage: ${0##*/} tag" >&2
    exit 64
fi

bindir=$( cd "${BASH_SOURCE[0]%/*}" && pwd )

# shellcheck source=_docker.sh
. "$bindir"/_docker.sh

for img in cli-bin cni-plugin controller metrics-api debug grafana proxy web jaeger-webhook tap; do
    docker_pull $img "$tag"
done
